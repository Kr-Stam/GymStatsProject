        android:textSize="20dp"
        android:textStyle=""
        app:layout_constraintBottom_toBottomOf="@+id/exerciseImageRV"
        app:layout_constraintStart_toEndOf="@id/exerciseImageRV"
        app:layout_constraintTop_toTopOf="@+id/exerciseImageRV" />

